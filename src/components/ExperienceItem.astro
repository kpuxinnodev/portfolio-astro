---
import WorkExperience from "../data/work-experience.json"
import NewTabButton from "./buttons/NewTabButton.astro";
---

{
  WorkExperience.EXPERIENCE.map(({ company, year, work, description, link, href }) => (
    <li>
      <li class="mb-10 ms-4">
        <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-emerald-900 bg-emerald-700" />
        <time class="mb-1 text-sm font-normal leading-none text-emerald-500">
          {year} - {company}
        </time>
        <h3 class="text-lg font-semibold text-white">
          {work}
        </h3>
        <p class="mb-4 text-base font-normal text-gray-400 text-wrap">
          {description}
        </p>
        <div class="flex flex-row justify-start items-center gap-4 pr-8">
            {link && (
          <NewTabButton href={href} />
        )}
        </div>
      </li>
    </li>
  ))
}
